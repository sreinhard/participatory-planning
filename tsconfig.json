{
  "compilerOptions": {
    "module": "amd",
    "lib": ["dom", "es2015.promise", "es5", "es6"],
    "target": "ES2019",
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots" : ["./nodes_modules/@types"],
  },
  "include": [
    "src/*"
  ]
}
